{
  "name": "IXORA-fullstack",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio IXORA construida con Electron y React",
  "author": "Pedidos",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && node server.js",
    "client": "cd client && npm run start:ip",
    "build": "cd client && npm run build",
    "server:stop": "cd server && npm run stop",
    "server:restart": "cd server && npm run restart",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development START_SERVER=false electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:dir": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.ixora.app",
    "productName": "IXORA",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "server/**/*",
      "!server/node_modules/**/*",
      "client/build/**/*",
      "!client/node_modules/**/*",
      "!client/src/**/*",
      "!client/public/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "extraFiles": [
      {
        "from": "server/databases",
        "to": "databases",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "server/uploads",
        "to": "uploads",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "client/public/favicon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "IXORA",
      "installerIcon": "client/public/favicon.ico",
      "uninstallerIcon": "client/public/favicon.ico",
      "installerHeaderIcon": "client/public/favicon.ico",
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^32.0.0",
    "electron-builder": "^25.1.8",
    "eslint-plugin-react-hooks": "^7.0.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "chart.js": "^4.5.1",
    "chartjs-node-canvas": "^5.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "exceljs": "^4.4.0",
    "express": "^5.1.0"
  }
}
